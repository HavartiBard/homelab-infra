# Platform Stack Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git - only .env.example

# =============================================================================
# General Settings
# =============================================================================
TZ=America/New_York

# =============================================================================
# Portainer Settings
# =============================================================================
PORTAINER_HTTPS_PORT=9443
PORTAINER_HTTP_PORT=9000
PORTAINER_EDGE_PORT=8000

# =============================================================================
# Nginx Proxy Manager Settings
# =============================================================================
NPM_HTTP_PORT=80
NPM_HTTPS_PORT=443
NPM_ADMIN_PORT=81
NPM_DISABLE_IPV6=true

# Database credentials (REQUIRED - generate strong passwords)
# Use: openssl rand -base64 24 | tr -dc 'a-zA-Z0-9' | head -c 32
NPM_DB_ROOT_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD
NPM_DB_USER=npm
NPM_DB_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD
NPM_DB_NAME=npm

# =============================================================================
# Technitium DNS Settings
# =============================================================================
TECHNITIUM_DNS_PORT=53
TECHNITIUM_ADMIN_PORT=5380
TECHNITIUM_DOH_PORT=8443
TECHNITIUM_DOMAIN=dns.local
TECHNITIUM_ADMIN_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD

# =============================================================================
# Uptime Kuma Settings
# =============================================================================
KUMA_PORT=3001
