# GPU Worker Stack Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git - only .env.example

# =============================================================================
# General Settings
# =============================================================================
TZ=America/New_York

# =============================================================================
# Ollama Settings
# =============================================================================
OLLAMA_PORT=11434

# Allowed origins for CORS (use * for development, restrict in production)
OLLAMA_ORIGINS=*

# Models to preload (comma-separated, e.g., "llama3.2,codellama")
OLLAMA_MODELS=

# Concurrency settings (adjust based on VRAM)
OLLAMA_NUM_PARALLEL=1
OLLAMA_MAX_LOADED_MODELS=1

# =============================================================================
# Open WebUI Settings
# =============================================================================
WEBUI_PORT=8080

# Secret key for session encryption (generate with: openssl rand -hex 32)
WEBUI_SECRET_KEY=

# Authentication settings
WEBUI_AUTH=true
WEBUI_ENABLE_SIGNUP=false
WEBUI_DEFAULT_USER_ROLE=pending
WEBUI_ENABLE_COMMUNITY_SHARING=false
