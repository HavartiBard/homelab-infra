# Monitoring Stack Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git - only .env.example

# =============================================================================
# General Settings
# =============================================================================
TZ=America/New_York

# =============================================================================
# Prometheus Settings
# =============================================================================
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=15d

# =============================================================================
# Grafana Settings
# =============================================================================
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD
GRAFANA_ROOT_URL=http://localhost:3000

# Optional plugins (comma-separated)
GRAFANA_PLUGINS=

# =============================================================================
# Exporter Ports
# =============================================================================
NODE_EXPORTER_PORT=9100
CADVISOR_PORT=8081
